<div class="container py-5">
  <h3>Companies</h3>
  <%= link_to "+ Create a Company", new_company_path %><br>
  <% if @companies.empty? %>
  <p>No Companies Found</p>
  <% else %>
    <ul class="list-group my-5">
      <% @companies.each do |company| %>
      <li class="list-group-item ">
        <a href="<%= company_path(company) %>", class='list-group-item-action'>
          <%= company.name %>
        </a>
        <%= link_to 'Destroy', company_path(company),
              method: :delete,
              data: { confirm: 'Are you sure?' }, id: "company-#{company.id}" %>
      </li>
      <% end %>
    </ul>
  <% end %>
</div>
